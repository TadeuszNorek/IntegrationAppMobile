<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HeadsUpPrepareActivity"
        android:background="@drawable/cardback_headsup">

    <TextView
            android:text="@string/prepare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/prepare_text" android:textAlignment="center"
            android:textColor="@color/white" android:textStyle="bold" android:textSize="50sp"
            android:layout_marginTop="92dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/prepare_time_text" android:textStyle="bold"
            android:textSize="50sp" android:textColor="@color/white" android:textAlignment="center"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/prepare_text"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>