<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HeadsUpCorrectActivity"
        android:background="@drawable/cardback_headsup_correct">

    <TextView
            android:text="@string/correct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/correct_text" android:textAlignment="center"
            android:textSize="80sp" android:textColor="@color/white" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:textStyle="bold"/>
</androidx.constraintlayout.widget.ConstraintLayout>