<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@color/colorPrimaryLight">

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/taboo_text" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintVertical_bias="0.041" android:textSize="30sp"
            android:textColor="@color/colorAccent" android:textStyle="bold"/>
    <Button
            android:text="Zgadnij słowo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/taboo_button"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintTop_toBottomOf="@+id/divider_taboo_1" android:layout_marginTop="108dp"
            android:background="@drawable/main_button_shape" android:textColor="@color/white" android:textSize="24sp"/>
    <Button
            android:text="Zanuć"
            android:layout_width="248dp"
            android:layout_height="wrap_content"
            android:id="@+id/headsup_button" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/taboo_button" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.498"
            android:background="@drawable/main_button_shape" android:textColor="@color/white" android:textSize="24sp"/>
    <View
            android:id="@+id/divider_taboo_1"
            android:layout_width="300dp"
            android:layout_height="2dp"
            android:background="@color/colorAccent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/taboo_text"
            android:layout_marginTop="100dp" app:layout_constraintHorizontal_bias="0.494"/>
    <View
            android:id="@+id/divider_taboo_2"
            android:layout_width="300dp"
            android:layout_height="2dp"
            android:background="@color/colorAccent"
            app:layout_constraintTop_toBottomOf="@+id/headsup_button"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.804" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.494"/>
    <TextView
            android:text="@string/copyright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textColor="@color/colorSecondaryLightText" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/divider_taboo_2" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintVertical_bias="0.724"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_info_white_48dp"
            android:id="@+id/imageButton"
            android:background="@drawable/circle_button_shape" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/headsup_button" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/divider_taboo_2" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.095"/>
</androidx.constraintlayout.widget.ConstraintLayout>