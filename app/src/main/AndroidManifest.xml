<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.dawid.glowienkowski.engmobileapp">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
                  android:theme="@style/AppTheme.NoActionBar"
                  android:screenOrientation="portrait"
                  android:configChanges="keyboardHidden|orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity"
                  android:theme="@style/AppTheme.NoActionBar"
                  android:screenOrientation="portrait"
                  android:configChanges="keyboardHidden|orientation|screenSize"/>
        <activity android:name=".TabooSettingsActivity"
                  android:theme="@style/AppTheme.NoActionBar"
                  android:screenOrientation="portrait"
                  android:configChanges="keyboardHidden|orientation|screenSize"/>
        <activity android:name=".SummaryActivity"
                  android:theme="@style/AppTheme.NoActionBar"
                  android:screenOrientation="portrait"
                  android:configChanges="keyboardHidden|orientation|screenSize"/>
        <activity android:name=".TabooGameActivity"
                  android:theme="@style/AppTheme.NoActionBar"
                  android:screenOrientation="portrait"
                  android:configChanges="keyboardHidden|orientation|screenSize"/>
        <activity android:name=".HeadsUpGameActivity"
                  android:theme="@style/AppTheme.NoActionBar"
                  android:screenOrientation="landscape"
                  android:configChanges="keyboardHidden|orientation|screenSize"/>
        <activity android:name=".HeadsUpPrepareActivity"
                  android:theme="@style/AppTheme.NoActionBar"
                  android:screenOrientation="landscape"
                  android:configChanges="keyboardHidden|orientation|screenSize"/>
        <activity android:name=".HeadsUpCorrectActivity"
                  android:theme="@style/AppTheme.NoActionBar"
                  android:screenOrientation="landscape"
                  android:configChanges="keyboardHidden|orientation|screenSize"/>
        <activity android:name=".HeadsUpIncorrectActivity"
                  android:theme="@style/AppTheme.NoActionBar"
                  android:screenOrientation="landscape"
                  android:configChanges="keyboardHidden|orientation|screenSize"/>
        <activity android:name=".HeadsUpSummaryActivity"
                  android:theme="@style/AppTheme.NoActionBar"
                  android:screenOrientation="portrait"
                  android:configChanges="keyboardHidden|orientation|screenSize"/>
    </application>

</manifest>